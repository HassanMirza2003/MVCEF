@{
}
@model List<MVCEF.Models.Entities.Product>
<h1>Products</h1>

<a asp-controller="Product" asp-action="Create" class="btn btn-primary float-end my-3">Add Product</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>

                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-info text-white me-2">EDIT</a>

                    <form method="post" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Delete" class="btn btn-danger ms-2" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
